{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "utils/controllers/user.controller.js", "utils/routes/user.route.js", "utils/Model/user.model.js", "utils/encryption/encryption.js", "utils/db/connection.js", "utils/app.js", "src/components/api/app/slices/AuthSlice.js", "services/UserService.js", "services/AuthService.js", "src/components/api/app/store.js"],
  "exclude": ["node_modules"]
}
